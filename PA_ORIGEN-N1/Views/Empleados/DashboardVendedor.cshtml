@{
    ViewBag.Title = "Panel del Vendedor";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="text-success">👓 Bienvenido al Panel del Vendedor</h2>
    <p class="text-muted">Aquí podrás gestionar ventas, visualizar productos y atender a los clientes.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h5 class="card-title">📦 Productos disponibles</h5>
                    <p class="card-text">Consulta el inventario de armazones, lentes y más.</p>
                    <a href="#" class="btn btn-success">Ver inventario</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h5 class="card-title">🧾 Cotizaciones</h5>
                    <p class="card-text">Prepara cotizaciones personalizadas para los clientes.</p>
                    <a href="#" class="btn btn-outline-success">Ir a cotizaciones</a>
                </div>
            </div>
        </div>
    </div>
</div>

