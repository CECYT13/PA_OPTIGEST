@model PA_ORIGEN_N1.ViewModels.RegistroEmpleadoViewModel

@{
    ViewData["Title"] = "Crear Usuario";

}

<h2>Crear nuevo Administrador o Empleado</h2>

<form asp-action="CrearAdministrador" method="post">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmarPassword" class="form-label"></label>
        <input asp-for="ConfirmarPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label"></label>
        <select asp-for="Rol" class="form-control">
            <option value="">--Selecciona Rol--</option>
            <option value="Administrador">Administrador</option>
            <option value="Empleado">Empleado</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Crear Usuario</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
