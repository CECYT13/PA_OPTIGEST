@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Bienvenido a OPTIGEST</h2>

    <!-- Sección: Productos -->
    <h4 class="text-mint mb-3">Productos</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-eye-fill fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Lentes de Contacto</h5>
                    <p class="card-text">Variedad de lentes blandos y rígidos para todo tipo de visión.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-eyeglasses fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Lentes Oftálmicos</h5>
                    <p class="card-text">Lentes recetados y personalizados con graduación precisa.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-columns-gap fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Armazones</h5>
                    <p class="card-text">Estilo y comodidad con nuestra selección de armazones modernos.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-layers fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Micas</h5>
                    <p class="card-text">Protección con antirreflejante, fotocromáticas y más opciones.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-droplet-half fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Limpieza</h5>
                    <p class="card-text">Accesorios para el cuidado de tus lentes y armazones.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección: Cita -->
    <h4 class="text-mint mb-3">Cita</h4>
    <div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Agendar Cita</h5>
                    <p class="card-text">Reserva fácilmente tu cita con un optometrista especializado.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-info-circle fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Estatus de Cita</h5>
                    <p class="card-text">Consulta el estado de tu cita y obtén información al instante.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección: Catálogo -->
    <h4 class="text-mint mb-3">Catálogo</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-search fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Examen Visual</h5>
                    <p class="card-text">Servicios profesionales de valoración visual y refracción.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-tools fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Reparación</h5>
                    <p class="card-text">Reparamos armazones, bisagras y más con calidad garantizada.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-calculator fs-1 text-mint"></i>
                    <h5 class="card-title mt-3">Cotización</h5>
                    <p class="card-text">Simula precios y arma el paquete ideal para tus necesidades.</p>
                </div>
            </div>
        </div>
    </div>
</div>

