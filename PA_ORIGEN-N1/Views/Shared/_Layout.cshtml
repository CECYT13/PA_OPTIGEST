@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OPTIGEST</title>

    <!-- Bootstrap y Bootstrap Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <!-- NAVBAR PRINCIPAL -->
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container-fluid">
                <div class="text-center my-3" >
                    <img src="~/img/LOGO_OPTIGEST.png" alt="OPTIGEST Logo" style="height:150px;" />
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Política</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary" asp-controller="Acceso" asp-action="Login">Iniciar Sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-success" asp-controller="Acceso" asp-action="Registrarse">Registrarse</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-3 d-flex align-items-center">
                                <span class="navbar-text">Hola, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Acceso" asp-action="Logout">
                                    <button type="submit" class="btn btn-outline-danger">Cerrar Sesión</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- SECCIÓN DE ÍCONOS + BÚSQUEDA -->
        <div class="bg-white border-bottom py-3 shadow-sm">
            <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
                <!-- Íconos -->
                <div class="d-flex gap-4 mb-3 mb-md-0 fs-4">
                    <a href="#" class="text-dark" title="Mi Cuenta"><i class="bi bi-person-circle"></i></a>
                    <a href="#" class="text-dark" title="Envíos"><i class="bi bi-truck"></i></a>
                    <a href="#" class="text-dark" title="Carrito"><i class="bi bi-cart3"></i></a>
                </div>

                <!-- Buscador -->
                <form class="d-flex" role="search">
                    <input class="form-control rounded-pill me-2" type="search" placeholder="Buscar..." aria-label="Buscar">
                    <button class="btn btn-mint rounded-pill" type="submit">Buscar</button>
                </form>
            </div>
        </div>
    </header>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="mt-5">
        &copy; 2025 - OPTIGEST | Sistema ERP para ópticas
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


