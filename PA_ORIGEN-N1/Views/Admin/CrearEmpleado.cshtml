@model PA_ORIGEN_N1.ViewModels.RegistroEmpleadoAdminViewModel

@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Crear Nuevo Empleado</h4>
        </div>
        <div class="card-body">
            <form asp-action="CrearEmpleado" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmarPassword" class="form-label"></label>
                    <input asp-for="ConfirmarPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoEmpleado" class="form-label"></label>
                    <select asp-for="TipoEmpleado" class="form-select">
                        <option value="">-- Selecciona Tipo de Empleado --</option>
                        <option value="Vendedor">Vendedor</option>
                        <option value="Optometrista">Optometrista</option>
                    </select>
                    <span asp-validation-for="TipoEmpleado" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Crear Empleado</button>
            </form>

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success mt-4">@TempData["Mensaje"]</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

